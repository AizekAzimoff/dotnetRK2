@model IEnumerable<midterm.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.stud_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stud_phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stud_mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.stud_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stud_phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stud_mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.group.GroupID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
